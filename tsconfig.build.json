{
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "target": "es6",
    "declaration": true,
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "es2015", "es2017"],
    "typeRoots": ["./node_modules/@types"],
    "types": ["react", "react-dom"]
  },
  "include": ["src"],
  "exclude": [
    "src/**/*.test.tsx",
    "src/**/*.stories.tsx",
    "src/**/*.stories.mdx",
    "src/setupTests.ts",
    "src/components/VirtualList/*",
    "src/App.tsx",
    "src/main.tsx"
  ]
}
